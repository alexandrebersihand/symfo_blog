{% extends 'base.html.twig' %}

{% block title %}Articles de l'auteur{% endblock %}

{% block body %}
    <h1>Articles de {{ author.name }}</h1>
    {% if articles is not empty %}
        <ul>
            {%  for article in articles %}
                <li>
                    <a href="{{ path('app_article_indexbyauthor', {id: article.id}) }}"> {{ article.title }} </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Pas d'articles</p>
    {% endif %}
    <a href="/">Accueil</a>
{% endblock %}